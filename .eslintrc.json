{
  "env": {
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "extends": "eslint:recommended",
  "globals": {
    "describe": true,
    "context": true,
    "expect": true,
    "beforeEach": true,
    "it": true,
    "Cypress": true,
    "cy": true
  },
  "rules": {
    "indent": [
      "error",
      2
    ],
    "eol-last": ["error", "always"],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "never"
    ]
  }
}
